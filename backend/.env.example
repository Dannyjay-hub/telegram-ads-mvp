# =============================
# Telegram Ads Marketplace MVP
# Backend Environment Variables
# =============================

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ACCESS_TOKEN=your-supabase-access-token

# --- Telegram Bot ---
BOT_TOKEN=your-telegram-bot-token
BOT_USERNAME=YourBotUsername_bot

# --- MTProto Credentials (for advanced channel stats) ---
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=your-api-id
TELEGRAM_API_HASH=your-api-hash

# --- TON Payments ---
MASTER_WALLET_ADDRESS=your-escrow-wallet-address
HOT_WALLET_MNEMONIC="your 24 word mnemonic phrase here"
TON_API_KEY=your-toncenter-api-key
TONAPI_KEY=your-tonapi-key
WEBHOOK_URL=https://your-backend-url/webhooks/ton

# --- Resource Optimization ---
ENABLE_TON_POLLING=true
TON_POLL_INTERVAL_MS=60000

# --- Post Monitoring ---
# Create a private channel, add bot as admin, paste channel ID here
# Format: -100xxxxxxxxxx (negative number with -100 prefix)
VERIFICATION_CHANNEL_ID=
MONITORING_DURATION_HOURS=24

# ===== Network Selection =====
# Set to 'testnet' or 'mainnet'
TON_NETWORK=testnet

# ===== Testnet Config (used when TON_NETWORK=testnet) =====
TESTNET_BOT_TOKEN=your-testnet-bot-token
TESTNET_MASTER_WALLET_ADDRESS=your-testnet-wallet-0Q-format
TESTNET_HOT_WALLET_MNEMONIC="your 24 word testnet mnemonic phrase here"
TESTNET_TON_API_KEY=your-testnet-toncenter-api-key

