SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
BOT_TOKEN=your-telegram-bot-token

# Resource Optimization
# Disable TON polling if webhooks are sufficient (reduces CPU)
ENABLE_TON_POLLING=true
# Poll interval in milliseconds (default: 60000 = 1 minute)
TON_POLL_INTERVAL_MS=60000

# Post Monitoring Verification
# Create a private channel, add bot as admin, paste channel ID here
# Format: -100xxxxxxxxxx (negative number with -100 prefix)
VERIFICATION_CHANNEL_ID=

# Monitoring Duration (hours) - default 24 for production
# Set to 6 for testing with shorter monitoring periods
# Random checks scale: ~1 check per 3 hours (minimum 3 checks)
MONITORING_DURATION_HOURS=6

# ===== Network Selection =====
# Set to 'testnet' or 'mainnet' (default: mainnet)
TON_NETWORK=mainnet

# ===== Testnet Config (used when TON_NETWORK=testnet) =====
TESTNET_BOT_TOKEN=your-testnet-bot-token
TESTNET_MASTER_WALLET_ADDRESS=your-testnet-wallet-0Q-format
