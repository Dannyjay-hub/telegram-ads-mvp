SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
BOT_TOKEN=your-telegram-bot-token

# Resource Optimization
# Disable TON polling if webhooks are sufficient (reduces CPU)
ENABLE_TON_POLLING=true
# Poll interval in milliseconds (default: 60000 = 1 minute)
TON_POLL_INTERVAL_MS=60000

# Post Monitoring Verification
# Create a private channel, add bot as admin, paste channel ID here
# Format: -100xxxxxxxxxx (negative number with -100 prefix)
VERIFICATION_CHANNEL_ID=

# Monitoring Duration (hours) - 6 for testing, 24 for production
# Random checks are generated within this period to prevent timing attacks
MONITORING_DURATION_HOURS=6
